# PolyBot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://polybot:polybot_dev_password@localhost:5432/polybot

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# POLYMARKET APIs (no auth required for public endpoints)
# =============================================================================
GAMMA_API_URL=https://gamma-api.polymarket.com
CLOB_API_URL=https://clob.polymarket.com
DATA_API_URL=https://data-api.polymarket.com

# =============================================================================
# DATA COLLECTION
# =============================================================================
# Collection intervals (seconds)
ORDERBOOK_INTERVAL=30
MARKET_REFRESH_INTERVAL=300
TRADE_INTERVAL=30

# Limits
MAX_MARKETS_TO_TRACK=100
REQUEST_DELAY=0.15

# =============================================================================
# LLM (for AI Analyst strategy)
# =============================================================================
# Provider: anthropic | openai | openrouter
LLM_PROVIDER=openrouter
LLM_MODEL=anthropic/claude-3.5-sonnet
LLM_API_KEY=your_api_key_here

# =============================================================================
# API (Phase 3)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# Rate limiting
RATE_LIMIT_FREE=100
RATE_LIMIT_PAID=1000

# Stripe (Phase 3)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
